{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-base",
            "description": "Target Windows with the Visual Studio development environment.",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-debug-shared",
            "displayName": "Debug (Shared)",
            "description": "Debug build for Windows with shared libraries.",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "SF_BUILD_SHARED": "ON"
            }
        },
        {
            "name": "windows-debug-static",
            "displayName": "Debug (Static)",
            "description": "Debug build for Windows with static libraries.",
            "inherits": "windows-debug-shared",
            "cacheVariables": {
                "SF_BUILD_SHARED": "OFF"
            }
        },
        {
            "name": "windows-release-shared",
            "displayName": "Release (Shared)",
            "description": "Release build for Windows with shared libraries.",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "SF_BUILD_SHARED": "ON"
            }
        },
        {
            "name": "windows-release-static",
            "displayName": "Release (Static)",
            "description": "Release build for Windows with static libraries.",
            "inherits": "windows-release-shared",
            "cacheVariables": {
                "SF_BUILD_SHARED": "OFF"
            }
        },
        {
